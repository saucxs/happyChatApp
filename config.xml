<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.happychatapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>乐聊</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <!--<access origin="*.chengxinsong.cn" />-->
    <!--<access origin="*.alicdn.com" />-->
    <!--<access origin="*.cloudflare.com" />-->
    <!--<access origin="*.ibruce.info" />-->
    <!--<access origin="*.bdstatic.com" />-->
    <!--<access origin="*.baidu.com" />-->
    <allow-intent href="//*/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <!--<allow-intent href="http://*.chengxinsong.cn/*" />-->
    <!--<allow-intent href="http://*.alicdn.com/*" />-->
    <!--<allow-intent href="http://*.cloudflare.com/*" />-->
    <!--<allow-intent href="http://*.ibruce.info/*" />-->
    <!--<allow-intent href="http://*.bdstatic.com/*" />-->
    <!--<allow-intent href="https://*.baidu.com/*" />-->
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/mipmap-hdpi/ic_launcher.png" />
        <icon density="mdpi" src="res/icon/android/mipmap-ldpi/ic_launcher.png" />
        <icon density="hdpi" src="res/icon/android/mipmap-mdpi/ic_launcher.png" />
        <icon density="xhdpi" src="res/icon/android/mipmap-xxhdpi/ic_launcher.png" />
        <icon density="xxhdpi" src="res/icon/android/mipmap-xxxhdpi/ic_launcher.png" />
        <!--欢迎页面其他设置-->
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="3500" />
        <preference name="FadeSplashScreen" value="true"/>
        <preference name="FadeSplashScreenDuration" value="750"/>
        <preference name="ShowSplashScreenSpinner" value="false"/>
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <!-- 欢迎页面，横屏 -->
        <splash density="land-hdpi" src="res/screen/android/drawable-land-hdpi/screen.png" />
        <splash density="land-ldpi" src="res/screen/android/drawable-land-ldpi/screen.png" />
        <splash density="land-mdpi" src="res/screen/android/drawable-land-mdpi/screen.png" />
        <splash density="land-xhdpi" src="res/screen/android/drawable-land-xhdpi/screen.png" />
        <splash density="land-xxhdpi" src="res/screen/android/drawable-land-xxhdpi/screen.png" />
        <splash density="land-xxxhdpi" src="res/screen/android/drawable-land-xxxhdpi/screen.png" />
        <!-- 欢迎页面，竖屏 -->
        <splash density="port-hdpi" src="res/screen/android/drawable-port-hdpi/screen.png" />
        <splash density="port-ldpi" src="res/screen/android/drawable-port-ldpi/screen.png" />
        <splash density="port-mdpi" src="res/screen/android/drawable-port-mdpi/screen.png" />
        <splash density="port-xhdpi" src="res/screen/android/drawable-port-xhdpi/screen.png" />
        <splash density="port-xhdpi" src="res/screen/android/drawable-port-xxhdpi/screen.png" />
        <splash density="port-xhdpi" src="res/screen/android/drawable-port-xxxhdpi/screen.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
